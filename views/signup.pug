extends layout 
block dropdown 
    a(class="dropdown-item" href="/signin") SignIn
block content
    div(class='container col-12 col-sm-4 shadow-lg p-3 mb-5 bg-white rounded' style='margin-top:50px')
        form(action="/signup" method="POST")
            div(style="padding-left:50px;padding-right:50px")
                h2(style="bold" class="text-center") Register
                div(style="padding-top:50px")
                    lable(for="name") Name
                    input(class="form-control form-control-lg"  name="name"  id="name"  type="text" placeholder="Enter your name" required)
                br
                lable(for="email") Email
                input(class="form-control form-control-lg" name="email" id="email" type="text" placeholder="Enter your email" required)
                br
                lable(for="password") Password
                input(class="form-control form-control-lg" name="password" id="password" type="password" placeholder="Enter your password" required)
                br
                if (prompt)
                    div(class = "alert alert-danger text-center" role = "alert") #{prompt}
                    br
                div(class="text-center " )
                    button(type="submit" class = "btn btn-danger") Submit
                div(class="text-center" style="padding-top:25px;padding-bottom:75px")
                    a(href="/signin" class="text-primary") Already have an account? Signin 
                        
